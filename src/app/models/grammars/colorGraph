digraph finite_state_machine {
	node [shape = circle];
  Start   -> S
  S -> R [ label = "<r>" ];
  S -> G [ label = "<g>" ];
  S -> B [ label = "<b>" ];

  R -> S [ label = "<r>" ];
  R -> G [ label = "<g>" ];
  R -> B [ label = "<b>" ];

  G -> R [ label = "<r>" ];
  G -> S [ label = "<g>" ];
  G -> B [ label = "<b>" ];

  B -> R [ label = "<r>" ];
  B -> G [ label = "<g>" ];
  B -> S [ label = "<b>" ];
}